<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sales_config_inherit_sale_def_bank" model="ir.ui.view">
        <field name="name">sale settings</field>
        <field name="model">sale.config.settings</field>
        <field name="inherit_id" ref="sale.view_sales_config"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='main']" position="inside">
                <group string="Default bank account">
                    <field name="default_bank_account" groups="base.group_sale_manager"  class="oe_inline"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
